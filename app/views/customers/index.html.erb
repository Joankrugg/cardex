<div class="zone"></div>
<% if user_signed_in? && current_user.email.include?('millesime-collection.com') %>
  <div class="search-form">
    <%= form_tag(customers_path, method: :get) do %>
      <div class="search-form-control form-group">
        <i class="fas fa-search search-img"></i>
        <%= text_field_tag :search, nil, class: "form-control string required", autocomplete: 'off'%>
        <div type="submit" class="validate">
          Allons-y
        </div>
      </div>
    <% end %>
  </div>
  <div class="result-block">
    <div class="results">
      <%= @customers.count %> résultats
    </div>
  </div>
  <div class="actions">
    <div class="container">
      <div class="row action-buttons">
        <div class="col-4 mx-auto">
          <%= link_to 'Créer un client MICE', new_customer_path, class: 'btn btn-validate' %>
        </div>
        <div class="col-4 mx-auto">
          <form enctype="multipart/form-data" action="/customers/import" accept-charset="UTF-8" method="post" class='import'><input type="hidden" name="authenticity_token" value="SzUvUwGk4iw8rAUxiidkvP0sINcbIdCDvYGQuTzr1nUfuadjaPkE8h9heKLeq7fNngNA/RmF5w3EyupKmEiylg==">
            <label for="file" class="custom-file-upload">
              'CSV'
            </label>
            <input type="file" name="file" id="file">
            <input type="submit" name="commit" value="importer" class="btn btn-validate" data-disable-with="importer">
          </form>
        </div>
        <div class="col-4 mx-auto">
          <%= link_to 'Télécharger un CSV', customers_path(format: "csv"), class: 'btn btn-validate' %>
        </div>
      </div>
    </div>
  </div>
  <div class="column-names">
    <div class="container">
      <div class="row">
        <div class="col-2">
          <h3>Titre</h3>
        </div>
        <div class="col-2">
          <h3>Nom</h3>
        </div>
        <div class="col-2">
          <h3>Activité</h3>
        </div>
        <div class="col-2">
          <h3>Ville</h3>
        </div>
        <div class="col-2">
          <h3>Email</h3>
        </div>
      </div>
    </div>
  </div>
  <div class="customers">
    <div class="container">
      <% @customers.each do |f| %>
        <%= link_to edit_customer_path(f) do %>
          <div class="row customer">
            <div class="col-2">
              <% if f.genre.present? %>
                <%= f.genre.upcase %>
              <% end %>
            </div>
            <div class="col-2">
              <% if f.name.present? %>
                <%= f.name %>
              <% end %>
            </div>
            <div class="col-2">
              <% if f.sector.present? %>
                <%= f.sector.name %>
              <% end %>
            </div>
            <div class="col-2">
              <% if f.city.present? %>
                <%= f.city %>
              <% end %>
            </div>
            <div class="col-2">
              <% if f.mail.present? %>
                <%= f.mail %>
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    <br>
  </div>

  <h2> Import customers</h2>
  <%= form_tag import_customers_path, multipart: true do %>
    <%= file_field_tag :file %>
    <%= submit_tag "import" %>
  <% end %>
<% end %>
