<div class="zone"></div>
<div class="container form-for-new">
  <%= simple_form_for @customer do |f| %>
    <div class="row">
      <div class="col-lg-8 col-md-9 col-sm-10 col-12 mx-auto form">
        <h3>Client MICE</h3>
        <div class="row">
          <div class="col-2">
            <%= f.input :genre %>
          </div>
          <div class="col-5">
            <%= f.input :name, required: false  %>
          </div>
          <div class="col-5">
            <%= f.input :surname  %>
          </div>
        </div>
        <div class="row">
          <%= f.input :mail, required: false   %>
        </div>
        <div class="row">
          <div class="col-4">
            <%= f.input :zipcode  %>
          </div>
          <div class="col-8">
            <%= f.input :city  %>
          </div>
        </div>
        <div class="row">
          <%= f.input :position %>
        </div>
        <div class="row">
          <%= f.association :creator, as: :radio_buttons %>
        </div>
        <div class="row">
          <%= f.association :sector, as: :radio_buttons %>
        </div>
        <div class="row">
          <div class="col-12">
            <%= f.button :submit, 'Valider', class: 'btn btn-validate' %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
