<div class="zone"></div>
<div class="container form-for-new">
  <%= simple_form_for @customer do |f| %>
    <div class="row">
      <div class="col-12 form">
        <h3>Client MICE</h3>
        <%= link_to customers_path do %>
          <button type="button" class="btn-close" aria-label="Close"></button>
        <% end %>
        <div class="row">
          <div class="col-2">
            <%= f.association :creator, label: "Nom du référent" %>
          </div>
          <div class="col-3">
            <%= f.association :sector, label: "Secteur d'activité"%>
          </div>
          <div class="col-3">
            <%= f.association :type, label: 'Type de société' %>
          </div>
          <div class="col-4">
            <%= f.input :type_name, label: 'Nom de société' %>
          </div>
          <div class="col-1">
            <%= f.input :genre %>
          </div>
          <div class="col-2">
            <%= f.input :name, required: false  %>
          </div>
          <div class="col-2">
            <%= f.input :surname  %>
          </div>
          <div class="col-3">
            <%= f.input :email, required: false   %>
          </div>
          <div class="col-4">
            <%= f.input :position %>
          </div>
          <div class="col-1">
            <%= f.input :zipcode  %>
          </div>
          <div class="col-2">
            <%= f.input :city  %>
          </div>
          <div class="col-2">
            <%= f.input :country, as: :string  %>
          </div>
          <div class="col-2">
            <%= f.input :phone  %>
          </div>
        </div>
        <div class="row">
          <div class="col-12 form-btn ">
            <%= f.button :submit, 'Valider', class: 'btn btn-validate' %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
