<div class="zone"></div>
<div class="container">
  <div class="row">
    <div class="col-lg-4 col-md-6 col-sm-8 col-10 mx-auto">
      <img src= 'https://res.cloudinary.com/da2krghvd/image/upload/v1658748177/Mill%C3%A9sime/Logo-Millesime_18MARs2020_v1.2.png' class= 'img-fluid' style='margin-top: 30px;margin-bottom: 30px;'>
    </div>
  </div>
  <div class="row">
    <% unless user_signed_in? %>
      <div class="btn btn-nav-pro center" data-bs-toggle="modal" data-bs-target="#contact">Répondre à la question</div>
    <% end %>
    <% if user_signed_in? %>
      <% if current_user.marketing? %>

        <div class="row">
          <div class="col-lg-3 mx-auto space">
            <div class="btn btn-nav-pro center" data-bs-toggle="modal" data-bs-target="#brindos">
              Brindos Lac et Château
            </div>
          </div>
          <div class="col-lg-3 mx-auto space">
            <div class="btn btn-nav-pro center" data-bs-toggle="modal" data-bs-target="#leognan">
              Le Manège
            </div>
          </div>
          <div class="col-lg-3 mx-auto space">
            <div class="btn btn-nav-pro center" data-bs-toggle="modal" data-bs-target="#megeve">
              Le Soleil d'Or
            </div>
          </div>
          <div class="col-lg-3 mx-auto space">
            <div class="btn btn-nav-pro center" data-bs-toggle="modal" data-bs-target="#raba">
              Le Domaine de Raba
            </div>
          </div>
          <div class="col-lg-3 mx-auto space">
            <div class="btn btn-nav-pro center" data-bs-toggle="modal" data-bs-target="#sacy">
              Le Château de Sacy
            </div>
          </div>
          <div class="col-lg-3 mx-auto space">
            <div class="btn btn-nav-pro center" data-bs-toggle="modal" data-bs-target="#theoule">
              La Plage Blanche
            </div>
          </div>
          <div class="col-lg-3 mx-auto space">
            <div class="btn btn-nav-pro center" data-bs-toggle="modal" data-bs-target="#porto">
              Cocorico
            </div>
          </div>
          <div class="col-lg-3 mx-auto space">
            <div class="btn btn-nav-pro center" data-bs-toggle="modal" data-bs-target="#millesime">
              Millesime
            </div>
          </div>
          <div class="col-lg-3 mx-auto space">
            <div class="btn btn-nav-pro center" data-bs-toggle="modal" data-bs-target="#mail_order">Commande d'email</div>
          </div>

          <div class="col-lg-3 mx-auto space">
            <a href="https://api.whatsapp.com/send?phone=33652751072"><div class="btn btn-nav-pro center">Envoyer un message</div></a>
          </div>
          <%= link_to customers_path do %>
            <div class="col-lg-3 mx-auto space">
              <div class="btn btn-nav-pro center">Le MICE par Millésime</div>
            </div>
          <% end %>
          <%= link_to custom_lists_path do %>
            <div class="col-lg-3 mx-auto space">
              <div class="btn btn-nav-pro center">Custom list</div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="row">
          <div class="btn btn-nav-pro center">Créez vous un profil millésimé</div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

<div class="modal fade" id="contact" tabindex="-1" aria-labelledby="contact" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="cardex-contact">Question</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="container">
          <%= simple_form_for @contact do |f| %>
            <div class="row">
              <div class="col-12 form">
                <h3>Question</h3>
                <div class="row">
                  <div class="col-12">
                    <%= f.input :answer, label: 'Votre Réponse' %>
                  </div>
                  <div class="col-12">
                    <%= f.input :surname, label: 'Votre Prénom' %>
                  </div>
                  <div class="col-12">
                    <%= f.input :name, label: 'Votre nom'%>
                  </div>
                  <div class="col-12">
                    <%= f.input :email, label: 'Votre Email'%>
                  </div>
                </div>
                <div class="row">
                  <div class="col-12 form-btn ">
                    <%= f.button :submit, 'Valider', class: 'btn btn-validate' %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="modal fade" id="mail_order" tabindex="-1" aria-labelledby="mail_order" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
