            <div class="row">
              <div class="col-12 form">
                <h3>Mail</h3>
                <div class="row">
                  <div class="col-12">
                    <%= f.input :title, label: 'Titre du mail' %>
                  </div>
                  <div class="col-12">
                    <%= f.input :goal, label: 'Objectif du mail' %>
                  </div>
                  <div class="col-12">
                    <%= f.input :text, label: 'Contenu du mail'%>
                  </div>
                  <div class="col-12">
                    <%= f.input :send_date, label: "Date d'envoi souhaitée"%>
                  </div>
                </div>
                <div class="row">
                  <div class="col-12 form-btn ">
                    <%= f.button :submit, 'Valider', class: 'btn btn-validate' %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

